{
  "name": "@robb_j/chowchow-json-envelope",
  "version": "0.1.0",
  "description": "A json structuring for chowchow",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "npx tsc --noEmit",
    "coverage": "jest --coverage",
    "preversion": "npm test -s && npm run build && git add dist",
    "prettier": "prettier --write ./**/*.{js,ts,tsx,json,css,md}",
    "start": "node dist/index.js",
    "test": "jest",
    "dev:once": "ts-node src/index.ts",
    "dev:watch": "nodemon -w src -e ts -x 'npx ts-node' src/index.ts"
  },
  "keywords": [
    "chowchow",
    "typescript",
    "json",
    "formatter"
  ],
  "author": "Rob Anderson (https://r0b.io)",
  "repository": "robb-j/chowchow-json-envelope",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "dependencies": {},
  "peerDependencies": {
    "@robb_j/chowchow": "^0.x.x"
  },
  "devDependencies": {
    "@robb_j/chowchow": "^0.4.1",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.18",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "1.15.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  }
}
